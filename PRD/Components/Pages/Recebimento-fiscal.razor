    private async Task SalvarDados()
        {
        if (RegistroSel == null)
        {
            Snackbar.Add("Nenhum registro fiscal carregado. Busque ou selecione um controle antes de salvar.", Severity.Warning);
            return;
        }
        try
        {
            // Verificando os dados antes de salvar
            Console.WriteLine("Dados para salvar: ");
             //  Console.WriteLine(JsonConvert.SerializeObject(RegistroSel));

            // Validar dados antes de salvar
            if (string.IsNullOrEmpty(RegistroSel.Fornecedor))
            {
                Snackbar.Add("Fornecedor não pode ser vazio.", Severity.Warning);
                return;
            }
            // Salvar ou atualizar
            bool sucesso;

            if (novoRegistro)           
            {
                
                sucesso = await BaseFiscalDocaService.AdicionarFiscalDoca(RegistroSel); // Adiciona no modelo BaseFiscalDoca
            }
            else
            {
                sucesso = await BaseFiscalDocaService.AtualizarDocaAsync(RegistroSel); // Atualiza no modelo BaseFiscalDoca
            }
            if (sucesso)
            {
                Snackbar.Add("Dados salvos com sucesso!", Severity.Success);
                await CarregarDados();  // Recarrega LNcs + Fiscal + Estatísticas
                LimparFormulario();
            }
            else
            {
                Snackbar.Add("Erro ao salvar dados!", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            // Aqui podemos capturar mais detalhes, como o erro da InnerException
            Snackbar.Add($"Erro ao salvar: {ex.Message}", Severity.Error);
            if (ex.InnerException != null)
            {
                Console.WriteLine($"InnerException: {ex.InnerException.Message}");
                Snackbar.Add($"Detalhes: {ex.InnerException.Message}", Severity.Error);
            }
        }
        finally
        {
            novoRegistro = true;
        }
    }
